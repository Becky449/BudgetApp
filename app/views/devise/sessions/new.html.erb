<div class="w-full mt-6 bg-white px-4">
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.email_field :email, autofocus: true, placeholder: 'Email', autocomplete: "email", class: "w-full forms" %>
  </div>

  <div class="field mt-2">
    <%= f.password_field :password, autocomplete: "current-password", placeholder: 'Password', class: "w-full forms" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions flex flex-col items-center mt-6">
    <%= f.submit "Log in", class: "btn p-4 rounded-lg text-white" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>