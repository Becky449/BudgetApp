<div class="w-full mt-6">
<%= form_with model: [@category, @expenditure] do |form| %>
  <div class="bg-white">
   <%= form.text_field :name, placeholder: 'Name', required: true, class: "w-full" %>
  </div>
   <div class="bg-white mt-2">
   <%= form.number_field :amount, placeholder: 'Amount Spent($)', type: 'float', required: true, class: "w-full p-4" %>
  </div>
  <div class='bg-white mt-2'>
  <%= form.label :category %><br>
  <%= form.collection_select :category_id, Category.all, :id, :name, { include_blank: 'Select Category', selected: @category.id },class: "w-full p-4" , required: true %>
</div>
  <div class="flex flex-col items-center mt-6">
    <%= form.submit "Add Transactions", class: "btn p-4 rounded-lg text-white" %>
  </div>
<% end %>
</div>
<div class="absolute bottom-0 flex flex-col gap-6 w-full">
    <%= link_to '<i class="fa-solid fa-circle-chevron-left"></i>'.html_safe, category_path(@category.id), class: "text-3xl back"%>
</div>